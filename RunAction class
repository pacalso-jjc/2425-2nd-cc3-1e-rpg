public class RunAction {
    private int distance;
    private String direction;
    private String runStyle;

    public RunAction(int distance, String direction, String runStyle) { 
        this.distance = distance;
        this.direction = direction;
        this.runStyle = runStyle;
    }

    public void execute(Character runner) {
        System.out.println(runner.getName() + " dashes " + distance + " steps " + direction + " with " + runStyle + "!");
        // Simulate movement logic (e.g., update runner's position)
    }
}
